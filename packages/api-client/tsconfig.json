{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist",
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@api-types/*": ["../../apps/api/dist/src/types/*"]
		},
        "declaration": true,
        "declarationMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
